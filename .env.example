# =============================================================================
# Inbox Deliverability Copilot - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control - it contains sensitive credentials

# =============================================================================
# Core Application
# =============================================================================

# Node environment (development | production)
NODE_ENV=development

# Server port (default: 5000 for Replit compatibility)
PORT=5000

# Replit development domain (auto-provided by Replit, no manual config needed)
REPLIT_DEV_DOMAIN=your-repl-name.username.repl.co

# =============================================================================
# Database
# =============================================================================

# PostgreSQL connection string (auto-provided by Replit DB)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/inbox_copilot

# =============================================================================
# Authentication & Security
# =============================================================================

# Session secret for cookie signing (generate with: openssl rand -base64 32)
SESSION_SECRET=your-super-secret-session-key-change-me-in-production

# =============================================================================
# Stripe Payments (for subscription management)
# =============================================================================

# Stripe secret key (from Stripe Dashboard > Developers > API keys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Stripe webhook signing secret (from Stripe Dashboard > Developers > Webhooks)
# Used to verify webhook authenticity
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Product IDs for subscription tiers
# Create these in Stripe Dashboard > Products
STRIPE_PRODUCT_ID=prod_your_product_id
STRIPE_PRICE_ID=price_your_price_id

# Stripe public key (for frontend - safe to expose)
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# =============================================================================
# Email (SMTP) Configuration
# =============================================================================

# SMTP server hostname (e.g., smtp.gmail.com, smtp.sendgrid.net)
SMTP_HOST=smtp.gmail.com

# SMTP port (usually 587 for TLS, 465 for SSL)
SMTP_PORT=587

# SMTP authentication username (usually your email address)
SMTP_USER=your-email@gmail.com

# SMTP authentication password or app-specific password
SMTP_PASS=your-smtp-password

# From email address for outbound emails
FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# Cron Job Security
# =============================================================================

# Secret key for authenticating cron job requests
# Generate with: openssl rand -hex 32
# Used to secure automated monitoring and digest endpoints
CRON_SECRET=your-cron-secret-key-change-me

# =============================================================================
# Development & Testing
# =============================================================================

# Optional: Set to "true" to enable verbose logging
# DEBUG=false

# Optional: Disable daily monitoring cron in development
# DISABLE_CRON=true

# =============================================================================
# Production Deployment Checklist
# =============================================================================
# 
# Before deploying to production:
# 
# 1. ✅ Generate strong SESSION_SECRET (32+ chars)
# 2. ✅ Use production Stripe keys (live mode, not test mode)
# 3. ✅ Configure production SMTP credentials
# 4. ✅ Set NODE_ENV=production
# 5. ✅ Generate secure CRON_SECRET
# 6. ✅ Verify DATABASE_URL points to production database
# 7. ✅ Set REPLIT_DEV_DOMAIN to your published domain
# 8. ✅ Configure Stripe webhooks to point to your production URL
# 9. ✅ Test email delivery in production environment
# 10. ✅ Verify cron jobs are running (check logs)
#
# =============================================================================
